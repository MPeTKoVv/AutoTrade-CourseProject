@model CreditCardFormModel

@{
	ViewBag.Title = "Add credit card";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="NameOnCard"></label>
				<input asp-for="NameOnCard" class="form-control" placeholder="Name...">
				<span asp-validation-for="NameOnCard" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CardNumber"></label>
				<input asp-for="CardNumber" class="form-control" placeholder="XXXX XXXX XXXX XXXX">
				<span asp-validation-for="CardNumber" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ExpirationDate"></label>
				<input asp-for="ExpirationDate" class="form-control" placeholder="MM/YY">
				<span asp-validation-for="ExpirationDate" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CVVCode"></label>
				<input asp-for="CVVCode" class="form-control" placeholder="XXX">
				<span asp-validation-for="CVVCode" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BillingAddress"></label>
				<input asp-for="BillingAddress" class="form-control" placeholder="Address...">
				<span asp-validation-for="BillingAddress" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Country"></label>
				<input asp-for="Country" class="form-control" placeholder="Country...">
				<span asp-validation-for="Country" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3 " type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}