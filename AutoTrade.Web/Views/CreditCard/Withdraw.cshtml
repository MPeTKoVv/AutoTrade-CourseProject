@model WithdrawMoneyFormModel;
@{
	ViewBag.Title = "Withdraw Money";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Money"></label>
                <input asp-for="Money" class="form-control" placeholder="1 ... 1 000 000">
                <span asp-validation-for="Money" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-success mt-3 " type="submit" value="Withdraw" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}