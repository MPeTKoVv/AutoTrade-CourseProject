@using AutoTrade.Services.Data.Interfaces;
@using AutoTrade.Web.Infrastructure.Extensions;
@using AutoTrade.Data.Models;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService UserService

@inject ISellerService SellerService
@{
	bool isUserSeller = await SellerService.SellerExistsByUserIdAsync(this.User.GetId()!);
	string userFullName = await UserService.GetFullNameByEmailAsync(this.User.Identity?.Name!);
	bool hasWallet = await UserService.HasWalletByIdAsync(this.User.GetId()!);
}

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @userFullName</a>
		</li>

		@if (!isUserSeller)
		{
			<li class="nav-item">
				<a class="nav-link text-dark" asp-controller="Seller" asp-action="Become">Become Seller</a>
			</li>
		}
		@if (!hasWallet)
		{
			<li class="nav-item">
				<a class="nav-link text-dark" asp-controller="Wallet" asp-action="Add">Add wallet</a>
			</li>
		}
		else
		{
			<li class="nav-item">
				<a class="nav-link text-dark" asp-controller="Wallet" asp-action="Mine">My wallet</a>
			</li>
		}

		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
		</li>
	}
</ul>
