@model CarFormModel;

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Make"></label>
				<input asp-for="Make" class="form-control" placeholder="Make...">
				<span asp-validation-for="Make" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Model"></label>
				<input asp-for="Model" class="form-control"
					   placeholder="Model...">
				<span asp-validation-for="Model" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Country"></label>
				<input asp-for="Country" class="form-control"
					   placeholder="Country...">
				<span asp-validation-for="Country" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control">
				<span asp-validation-for="Price" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Year"></label>
				<input asp-for="Year" class="form-control"
					   placeholder="Year...">
				<span asp-validation-for="Year" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Horsepower"></label>
				<input asp-for="Horsepower" class="form-control"
					   placeholder="Horsepower...">
				<span asp-validation-for="Horsepower" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Mileage"></label>
				<input asp-for="Mileage" class="form-control"
					   placeholder="Mileage...">
				<span asp-validation-for="Mileage" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control"
						  placeholder="The car..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			@*<div class="mb-3">
			<label for="Images" class="form-label">Image(s)</label>
			<input class="form-control" type="file" id="formFileMultiple" multiple>
			<span asp-validation-for="Images" class="small text-danger"></span>
			</div>*@
@*			<div>
				<select name="FacultyList" multiple class="sel form-control" asp-for="Images"
						id="uniFaculties" asp-items="@(new MultiSelectList(Model.Images, "Name", "Name"))">
				</select>
			</div>*@
			<div class="form-group">
				<label asp-for="ImageUrl"></label>
				<input asp-for="ImageUrl" class="form-control"
					   placeholder="Image...">
				<span asp-validation-for="ImageUrl" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" class="form-control">
					@foreach (var category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="CategoryId" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ConditionId"></label>
				<select asp-for="ConditionId" class="form-control">
					@foreach (var condition in Model.Conditions)
					{
						<option value="@condition.Id">@condition.Name</option>
					}
				</select>
				<span asp-validation-for="ConditionId" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EngineTypeId"></label>
				<select asp-for="EngineTypeId" class="form-control">
					@foreach (var engineType in Model.EngineTypes)
					{
						<option value="@engineType.Id">@engineType.Type</option>
					}
				</select>
				<span asp-validation-for="EngineTypeId" class="small textdanger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Add" />
			</div>
		</form>
	</div>
</div>