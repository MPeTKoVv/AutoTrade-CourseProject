@model IEnumerable<IndexViewModel>

@{
	ViewData["Title"] = "Home Page";
	var cars = Model.ToList();
}
@if (!cars.Any())
{
	<div class="mt-4 p-5 bg-light">
		<h1 class="display-4">Welcome to the best place to buy your car!</h1>
		<p class="lead">
			There are no cars in the system currently available
			so why don't you just add one?
		</p>
		<hr class="my-4">
		<p class="lead">
			@if (this.User.Identity?.IsAuthenticated ?? false)
			{
				<a asp-controller="Car" asp-action="Add" class="btn btn-primary btn-lg"
				   role="button">Add Car</a>
			}
		</p>
	</div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < cars.Count(); i++)
		{
			var car = cars[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img class="d-block w-100" style="height:auto"
					 src="@car.ImageUrl" alt="@car.Make @car.Model"><div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="Car" asp-action="Details"
						   asp-route-id="@car.Id"> @car.Make @car.Model</a>
					</h5>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

<div class="mb-5"></div>

<div class="row">
	<div class="col-12 text-center">
		<button class="btn btn-primary" id="statistics_btn">Show Statistics</button>
	</div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics_box">
	<div class="row">
		<h2 class="col-md-6 text-center" id="total_cars"></h2>
		<h2 class="col-md-6 text-center" id="total_sales"></h2>
		<h2 class="col-md-6 text-center" id="total_users"></h2>
		<h2 class="col-md-6 text-center" id="total_sellers"></h2>
	</div>
</div>

@section Scripts
{
	<script>statistics();</script>
}